{
  "compilerOptions": {
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noEmitHelpers": true,
    "strictNullChecks": false,
    "skipDefaultLibCheck": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7"
    ],
    "types": [
      "socket.io",
      "express",
      "express-serve-static-core",
      "serve-static",
      "node",
      "mine",
      "mongodb",
      "mongoose",
      "body-parser"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.e2e.ts",
    "server"
  ],
  "compileOnSave": true,
  "buildOnSave": true,
  "atom": { "rewriteTsconfig": false }
}
